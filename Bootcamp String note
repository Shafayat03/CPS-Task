/// sort a string

#include<bits/stdc++.h>
using namespace std;
int main()
{

    //string--> collection of character

    //class
     string s;
     cin>>s;


 sort(s.begin(),s.end());
 cout<<s;

}

///  reverse sort a string
 sort(s.rrbegin(),s.rend());
 cout<<s;


/// string size print
