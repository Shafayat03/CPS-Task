/// string  Concatenation(jura lagano )print
#include<bits/stdc++.h>
using namespace std;
int main()
{

     string s1,s2;
     cin>>s1>>s2;


   cout << s1+ s2<<endl;

}

/// string theke character erase kora print
#include<bits/stdc++.h>
using namespace std;
int main()
{
   string s = "Karim";
   s.erase(2,3);
   // index input nibe just
   cout<<s<<endl;
}


/// Buffer solution

// a kind of box
#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    //Buffer bad dewar jonno
    cin.ignore();

    for(int i = 1; i <= n; i++)
    {
        string s;
      
      // multiple line
        getline(cin,s);
        cout<<s;
    }


}





/// ASCII typecasting
//0-9
