 cout<<s.size();

}


/// string  Concatenation(jura lagano )print
#include<bits/stdc++.h>
using namespace std;
int main()
{

     string s1,s2;
     cin>>s1>>s2;


   cout << s1+ s2<<endl;

}

/// string theke character erase kora print
#include<bits/stdc++.h>
using namespace std;
int main()
{
   string s = "Karim";
   s.erase(2,3);
   // index input nibe just
   cout<<s<<endl;
}
