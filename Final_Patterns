/// pattern 2  Au 18 Cse
/*
      CCCC
       CCC
        CC
         C
*/



#include<stdio.h>
int main()
{
    int n;
    scanf("%d",&n);
    int i,j,k;
    for(i = 1; i <=n;i++){ // rows
        
           for(j = 1; j < i; j++){ // space
                printf(" ");}
            for(k =i; k <= n; k++){  //columns
                printf("C");
            }
            printf("\n");
        }
    }




