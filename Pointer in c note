/// swaping two variables using pointer in c

/*

#include<stdio.h>
int main()
{
    int x = 10, y = 20,temp;

    int *ptr1, *ptr2;

    ptr1 = &x;
    ptr2 = &y;

    ///swaping

    temp = *ptr1;
    *ptr1 = *ptr2;

    *ptr2 = temp;

    printf("x = %d\n",x);
    printf("y = %d\n",y);


  return 0;
}

*/


/// swaping two variables using pointer and function



/*


#include<stdio.h>

/// function
void swapping(int *ptr1, int *ptr2){
     int temp;
    temp = *ptr1;
    *ptr1 = *ptr2;
    *ptr2 = temp;

}





int main()
{
    int x = 10, y = 20;
    printf("Before swapping : x = %d, y = %d\n", x,y);


    swapping(&x,&y);

    printf("after swapping : x = %d, y = %d\n", x,y);

  return 0;
}

*/



