/// Minimum value print in array


#include<stdio.h>
int main()
{
    int num[100123],n;
    scanf("%d",&n);

    for(int i = 0; i < n; i++){
        scanf("%d",&num[i]);
    }

    int mn = num[0];

    for(int i = 1; i < n; i++){
        if( mn > num[i])
            mn = num[i];

    }
    printf(" min : %d\n", mn);



  return 0;
}





/// printing fibonacci series using  array

#include<stdio.h>
int main()
{
    int a[30],n;

    scanf("%d",&n);

    a[0] =0;
    a[1] =1;

    for( int i = 2; i<n; i++){
        a[i] =  a[i-1] + a[i-2];
    }
    printf("\n");
    for(int i = 0; i < n; i++){
        printf("%d ",a[i]);
    }

  return 0;
}





///  finding a number using Linear Search in array

// value  r position check kore match hoi kina mane kono akta value ei programme er modde ache kina ber korar jonno use kori amra linear search

#include<stdio.h>
int main()
{
    int num[] = {3,4,5,6,8,2,7,9};
    int value;
    int position = -1;
    scanf("%d",&value);

    for(int i = 0; i < 8; i++){
        if(value == num[i]){
            position = i + 1;
            break;
        }
    }
    if(position == -1){
        printf("valuse not found\n");

    }
    else printf("Value is found: %d\n", position);





  return 0;
}


/// How to copy all elements of an array in another array

#include<stdio.h>
int main()
{
    int array1[30] ,array2[30],n;

    scanf("%d",&n);

    for(int i = 0 ; i <n; i++){
        scanf("%d",&array1[i]);
    }

    printf("Array1: ");
    for(int i = 0; i< n; i++){
        printf("%d ",array1[i]);
    }
    // coping all element to array2[]
    for(int i = 0; i < n; i++){
        array2[i] = array1[i];
    }

    printf("\nArray2: ");
    for(int i = 0; i< n; i++){
        printf("%d ",array2[i]);
    }

  return 0;
}


/// How to initialize declare and  printing 2D array / Matrix array
#include<stdio.h>
int main()
{
    int a[3][4] = {{3,4,5,3},{6,5,7,4},{3,5,6,7}};

    for(int i = 0; i < 3; i++){
        for(int j = 0; j < 4; j++){
            printf("%d ",a[i][j]);
        }
        printf("\n");
    }



  return 0;
}



