#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    int x,y,i,cnt;
    cin>>t;
    while(t--){

        cnt = 0;
        cin >>x>>y;
        if(x == 0 || x % 2 == 0){
            x++;
        }
        for(int i = 0; i < y; i++){
            cnt+=x;
            x +=2;
        }

    cout << cnt << endl;


    }





    return 0;
}
