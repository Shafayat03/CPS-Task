/// pattern task - 04
/*

#include<stdio.h>
int main()
{
    int n, row, col;
    scanf("%d",&n);
    for(row = 1; row <= n; row++){
        for(col = 1; col <= n - row; col++){
            printf(" ");
        }
        for(col = 1; col <=row; col++){
            printf("*");
        }
        printf("\n");
    }

  return 0;
}

*/

/// pattern task 5

/*


#include<stdio.h>
int main()
{
    int n, row, col;
    scanf("%d",&n);

    for(row = 1; row <= n; row++){
        for(col = 1; col <= n- row; col++){
            printf(" ");

        }

           for(col = 1; col <= 2*row-1; col++){
            printf("*");

        }
        printf("\n");
    }

  return 0;
}

*/

/// Pattern task - 6

/*

#include<stdio.h>
int main()
{
    int n, row, col;
    scanf("%d",&n);

    for(row = n; row >= 1; row--){
        for(col = 1; col <= n- row; col++){
            printf(" ");

        }

           for(col = 1; col <= 2*row-1; col++){
            printf("*");

        }
        printf("\n");
    }

  return 0;
}
*/

